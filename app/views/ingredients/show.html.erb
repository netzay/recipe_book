<%binding.pry%>
<%=link_to "Add to Recipe", ingredient_path(ingredient)%>
<% if !@ingredient.nil? %>
  <%=form_tag ({controller: 'ingredients', action: 'create', method: 'post'}) do %>
    <%=hidden_field_tag 'ingredient_id', params[:id]%>
    <%=submit_tag "Edit Ingredient"%>
  <%end%>
  <%end%>
<%if @user%>
  <%=link_to "Search", ingredients_path(@ingredient)%>
<%else%>
  <%=form_tag ({controller: 'ingredient', action: 'search', method: 'post'}) do %>
    <%=hidden_field_tag 'ingredient', params[:ingredient]%>
    <%=submit_tag "Search Recipes"%>
  <%end%>
<%end%>


