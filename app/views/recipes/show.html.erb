<h4><%="#{@recipe.title}"%></h4>
<h5>Category-  <%="#{@recipe.category}"%></h5>
<h5>Directions-  <%="#{@recipe.directions}"%></h5> 
<h5>Cook Time-  <%="#{@recipe.cook_time}"%> minutes </h5> 

<%if @user%>
  <%=link_to "Edit", edit_recipe_path(@recipe)%>
<%else%>
  <%=form_tag ({controller: 'recipes', action: 'edit', method: 'post'}) do %>
    <%=hidden_field_tag 'recipe_id', params[:id]%>
    <%=submit_tag "Edit Recipe"%>
  <%end%>
  <%end%>
<%if @user%>
  <%=link_to "Search", ingredients_path(@ingredient)%>
<%else%>
  <%=form_tag ({controller: 'ingredient', action: 'search', method: 'post'}) do %>
    <%=hidden_field_tag 'ingredient', params[:ingredient]%>
    <%=submit_tag "Search Recipes"%>
  <%end%>
<%end%>
